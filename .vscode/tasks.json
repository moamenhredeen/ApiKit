{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": ["-B", "build"],
            "group": "build",
            "detail": "Configure CMake project"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "configure",
            "detail": "Build the project"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "build"],
            "group": "build",
            "detail": "Clean build directory"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./build/bin/apikit",
            "group": "test",
            "dependsOn": "build",
            "detail": "Run the application"
        }
    ]
}