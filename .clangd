CompileFlags:
  Add: 
    - -I./include
    - -I./libs/nuklear  
    - -I./libs/tomlc99
    - -DNK_INCLUDE_FIXED_TYPES
    - -DNK_INCLUDE_STANDARD_IO
    - -DNK_INCLUDE_STANDARD_VARARGS
    - -DNK_INCLUDE_DEFAULT_ALLOCATOR
    - -DNK_INCLUDE_VERTEX_BUFFER_OUTPUT
    - -DNK_INCLUDE_FONT_BAKING
    - -DNK_INCLUDE_DEFAULT_FONT
    - -DNK_IMPLEMENTATION
    - -DNK_GLFW_GL3_IMPLEMENTATION

Diagnostics:
  ClangTidy:
    Add: ["*"]
    Remove: ["readability-magic-numbers", "cppcoreguidelines-avoid-magic-numbers"]

InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true

Hover:
  ShowAKA: true